<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="12px"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20px"
        android:layout_marginTop="20px"
        android:layout_marginRight="20px"
        app:cardBackgroundColor="@color/backgroundColor"
        app:cardCornerRadius="10dp"
        app:cardElevation="24dp"
        app:contentPaddingBottom="3dp"
        app:contentPaddingTop="3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iconNodeImageView"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/ic_folder_24dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/nameNodeTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ServerCapabilities"
                    android:textAlignment="textStart"
                    android:textColor="@color/colorAccent"
                    android:textSize="24sp" />

                <View
                    android:id="@+id/divider2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="?android:attr/listDivider" />

                <TextView
                    android:id="@+id/namespaceTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Namespace: 100" />

                <TextView
                    android:id="@+id/nodeIndexTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="NodeIndex: 10000" />

                <TextView
                    android:id="@+id/classNodeTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Class: ReferenceType" />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>